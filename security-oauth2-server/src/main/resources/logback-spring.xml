<configuration>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <springProperty name="spring.profiles.active" source="spring.profiles.active"/>
    <springProperty name="server.display-name" source="server.display-name"/>

    <springProperty name="logback.behaviour.mongo" source="logback.behaviour.mongo"/>
    <springProperty name="logback.behaviour.elasticsearch" source="logback.behaviour.elasticsearch"/>
    <springProperty name="logback.log.elasticsearch" source="logback.log.elasticsearch"/>

    <property name="logs.dir" value="${user.dir}/logs/${server.display-name}"/>

    <include resource="logback-${spring.profiles.active}.xml"/>
</configuration>
